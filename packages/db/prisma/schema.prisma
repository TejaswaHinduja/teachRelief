generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(cuid())
  email String @unique
  name String
  passwordHash String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role UserRole @default(STUDENT)
}
enum UserRole{
  TEACHER
  STUDENT
}

model Room{
    code String @unique
    createAT DateTime @default(now())
}

model Chat{
    id String @id @default(cuid())
    roomId String 
    message String
    userId String 
    
}

